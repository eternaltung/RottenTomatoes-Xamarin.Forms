<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RottenTomatoXamarinForm.DetailPage">
	<ContentPage.Content>
		<Grid>
			<Image x:Name="BackGroundImg" Aspect="Fill" />
			<StackLayout x:Name="DetailView" VerticalOptions="End" Opacity="0.8" BackgroundColor="Gray" HeightRequest="300">
				<StackLayout.GestureRecognizers>
					<PanGestureRecognizer PanUpdated="OnPanUpdated" />
				</StackLayout.GestureRecognizers>
				<ContentView Padding="5,4,0,0">
					<Label x:Name="TitleLabel" TextColor="White" FontSize="22" FontAttributes="Bold"/>
				</ContentView>
				<ContentView Padding="5,10,0,0">
					<Label x:Name="DescLabel" TextColor="White" LineBreakMode="WordWrap"/>
				</ContentView>

			</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>